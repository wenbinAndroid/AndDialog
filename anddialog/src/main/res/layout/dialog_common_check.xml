<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_check_dialog_bg"
              android:gravity="center"
              android:orientation="vertical">
    <TextView android:layout_width="match_parent"
              android:text="友情提醒"
              android:id="@+id/tv_check_title"
              android:visibility="gone"
              android:layout_marginTop="@dimen/dp_20"
              android:textColor="@color/check_title_color"
              android:textSize="@dimen/sp_17"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_check_message"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_85"
              android:layout_marginLeft="@dimen/dp_6"
              android:layout_marginRight="@dimen/dp_6"
              android:gravity="center"
              android:maxLines="3"
              android:text="这里是内容界面"
              android:textColor="@color/check_message_color"
              android:textSize="@dimen/sp_17"/>
    <ImageView android:layout_width="match_parent"
               android:layout_height="@dimen/dp_0_5"
               android:background="#f1f2f6"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_40"
                  android:orientation="horizontal">
        <Button android:id="@+id/btn_check_cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_check_dialog_left_button"
                android:text="取消"
                android:textColor="@color/check_left_color"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"/>
        <ImageView android:layout_width="@dimen/dp_1"
                   android:layout_height="match_parent"
                   android:background="#f1f2f6"/>
        <Button android:id="@+id/btn_check_enter"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_check_dialog_right_button"
                android:text="确定"
                android:textColor="@color/check_right_color"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>