<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomDialog" parent="@android:style/Theme.Panel">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BottomDialog_Normal" parent="@android:style/Theme.Panel">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="BottomDialog.Animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <style name="BottomToTopDialog" parent="@android:style/Theme.Panel">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.Top.Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="BottomDialog.Top.Animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>


    <style name="CenterDialog" parent="@android:style/Theme.Panel">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/CenterDialog.Animation</item>
    </style>

    <style name="CenterDialog.Animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/center_animation_in</item>
        <item name="android:windowExitAnimation">@anim/center_animation_out</item>
    </style>
</resources>